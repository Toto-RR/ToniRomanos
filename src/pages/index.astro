---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/AboutMe.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import Experience from "@/components/Experience.astro"
import Estudios from "@/components/Estudios.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import Projects from "@/components/Projects.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
import TitleSection from "@/components/TitleSection.astro"
import OtherProjects from "@/components/OtherProjects.astro"
import IconCarrusel from "@/components/IconCarrusel.astro"
import LittleTitleSection from "@/components/LittleTitleSection.astro"
---

<Layout
  title="Toni Romanos - Desarrollador de Videojuegos"
  description="Portfolio oficial de Toni Romanos. Desarrollador de videojuegos, aplicaciones y experiencias interactivas."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>
    <div class="space-y-24">
    
    <SectionContainer id="proyectos">
      <TitleSection>
        <CodeIcon class="size-7" />
        Proyectos Destacados
      </TitleSection>
      <Projects />
      
      <LittleTitleSection>
        <CodeIcon class="size-7" />
        Otros proyectos interesantes
      </LittleTitleSection>
      <OtherProjects />
    </SectionContainer>
    
    <SectionContainer id="habilidades">
      <TitleSection>
        <CodeIcon class="size-7" />
        Habilidades
      </TitleSection>
      <IconCarrusel />
    </SectionContainer>

    <SectionContainer id="experiencia">
      <TitleSection>
        <Briefcase class="size-8" />
        Experiencia
      </TitleSection>
      <Experience />
    </SectionContainer>

    <SectionContainer id="estudios">
      <TitleSection>
        <Briefcase class="size-8" />
        Estudios
      </TitleSection>
      <Estudios />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <TitleSection>
        <ProfileCheck class="size-8" />
        Sobre m√≠
      </TitleSection>
      <AboutMe />
    </SectionContainer>

  </div>
  </main>
</Layout>
